package WordProblems.Interfaces;

// ---- SecurityCameraSensor ----
public class SecurityCameraSensor implements Sensor, HasBattery, Wireless {
    // TODO: fields, constructor
    private static final int DEFAULT_READING = 0;
    private static final String CAMPUS_NAME = "Ashesi University";
    
    private double motion;
    private int batterylevel;
    private String signalStrength;

    public SecurityCameraSensor(double motion, int batterylevel, String signalStrength, boolean isCritical){
        this.motion = motion;
        this.batterylevel = batterylevel;
        this.signalStrength = signalStrength;
    }
    // TODO: implement required methods
    public int readValue(){
        return motion;
    }
    public String getLocation(){
        return CAMPUS_NAME;
    }

    public String getSignalStrength(){
        return signalStrength;
    }

    // TODO: override isCritical(): true if battery < 10 OR motion > 20
    @Override
    public boolean isCritical() {
        if (batterylevel < 10 || motion > 20) return true;
        return false;
    }

    @Override
    public String summary() {
        return "[Sensor @ " + getLocation() + "] reading=" + readValue();
    }

  
    public int getBatteryLevel(){
        return batterylevel;
    }

    @Override
    public boolean needsCharging() {
        return getBatteryLevel() < 10;
    }
}
